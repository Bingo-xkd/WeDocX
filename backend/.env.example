# -----------------------------------------------------------------------------
# WeDocX Backend Environment Variables
# -----------------------------------------------------------------------------
#
# 这个文件是一个模板. 请复制为 `.env` 文件并根据你的环境进行修改.
# 不要将带有敏感信息的 `.env` 文件提交到版本库中.

# --- Application Settings ---
# 环境: development, production, or testing
ENVIRONMENT="development"
# 开启/关闭调试模式
DEBUG=False
# 用于签名JWT令牌的密钥, 在生产环境中请务必修改为一个长且随机的字符串
SECRET_KEY="a-very-secret-key-that-you-should-change"
# 访问令牌的过期时间（分钟）
ACCESS_TOKEN_EXPIRE_MINUTES=30


# --- Server Settings ---
HOST="127.0.0.1"
PORT=8000


# --- SMTP Email Settings ---
# 如果你不需要发送邮件, 可以留空.
SMTP_SERVER="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user@example.com"
SMTP_PASSWORD="your_smtp_password"
SENDER_EMAIL="sender@example.com"
SMTP_USE_TLS=True
SMTP_USE_SSL=False


# --- Redis Settings (for Celery) ---
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""


# --- PostgreSQL Database Settings (for Admin UI) ---
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="wedocx"
DB_USER="postgres"
DB_PASSWORD="your_db_password"

# --- WeChat Bot Settings ---
WECHAT_BOT_ENABLED=False
# 你的 Wechaty Puppet Token
# WECHAT_BOT_TOKEN="your-wechaty-puppet-token" 